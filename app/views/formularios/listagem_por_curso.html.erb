<table>
    <% form_for @search do |f| %>
    <tr>
      <td align="right">
        <%= f.label :disciplina_equals, "Disciplina Pretendida" %>
        <%= f.select :disciplina_equals,Formulario::DISCIPLINA, :size => 10, :include_blank => "TODOS" %>
      </td>
      <td align="center" colspan="2">
        <%= f.submit "Buscar" %>
      </td>
    </tr>
  <% end %>
</table>
<div id="imprimir">
<table>
  <thead>
    <tr>
      <th>Inscrição Nº</th>
      <th>CPF</th>
      <th>Nome</th>
      <th>Disciplina Escolhida</th>
      <th colspan="3">Administrar</th>
    </tr>
  </thead>
  <tbody>
    <% for formulario in @formularios %>
      <tr>
        <td><%=h formulario.id %></td>
        <td><%=h formulario.cpf %></td>
        <td><%=h formulario.nome %></td>
        <td><%=h formulario.disciplina %></td>
        <td><%= link_to image_tag("/images/exibir.gif", :size => "15x15"), formulario, :title => "Visualizar inscrição" %></td>
        <td><%= link_to image_tag("/images/editar.png", :size => "15x15"), edit_formulario_path(formulario), :title => "Alterar inscrição" %></td>
        <td><%= link_to image_tag("/images/excluir.png", :size => "15x15"), formulario, :confirm => 'Tem certeza?', :method => :delete, :title => "Excluir inscrição" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<table>
  <tr>
    <td><p><%= link_to image_tag("/images/icon_add.png", :size => "35x35"), new_formulario_path, :title => "Nova inscrição" %></p></td>
    <% if params[:search].present? %>
      <td><td align="left"><%= link_to_function(image_tag("/images/imprimir.png", :size => "35x35"),"MM_openBrWindow('#{impressao_formularios_path(:search => params[:search][:disciplina_equals])}','figura','width=890,height=450')") %></td></td>
    <%end%>
  </tr>
</table>
