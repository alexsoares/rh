<table>
    <% form_for @search do |f| %>
    <tr>
      <td align="right">
        <%= f.label :nome_like, "Nome" %>
        <%= f.text_field :nome_like, :size => 10 %>
      </td>
      <td align="center" colspan="2">
        <%= f.submit "Buscar" %>
      </td>
    </tr>
  <% end %>
</table>
<table>
  <thead>
    <tr>
      <th>Inscrição Nº</th>
      <th>Nome</th>
      <th>CPF</th>
      <th colspan="3">Administrar</th>
    </tr>
  </thead>
  <tbody>
    <% for formulario in @formularios %>
      <tr>
        <td><%=h formulario.id %></td>
        <td><%=h formulario.nome %></td>
        <td><%=h formulario.cpf %></td>
        <td><%= link_to image_tag("/images/exibir.gif", :size => "15x15"), formulario, :title => "Visualizar inscrição" %></td>
        <td><%= link_to image_tag("/images/editar.png", :size => "15x15"), edit_formulario_path(formulario), :title => "Alterar inscrição" %></td>
        <td><%= link_to image_tag("/images/excluir.png", :size => "15x15"), formulario, :confirm => 'Tem certeza?', :method => :delete, :title => "Excluir inscrição" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to image_tag("/images/icon_add.png", :size => "35x35"), new_formulario_path, :title => "Nova inscrição" %></p>
