<table>
    <% form_for @search do |f| %>
    <tr>
      <td align="right">
        <%= f.label :curso_like, "Inscrição" %>
        <%= f.select :curso_like,Formulario::DISCIPLINA, :include_blank => "TODOS" %>
      </td>
      <td align="center" colspan="2">
        <%= f.submit "Buscar" %>
      </td>
    </tr>
  <% end %>
</table>
<br/>
<h1 align="center">Lista de apurações</h1>
<div class="scroll">
<table>
  <thead>
    <tr>
      <th>Inscrito</th>
      <th>Disciplina</th>
      <th>N pontos</th>
      <th>Nota prova</th>
      <th>Total</th>
      <th colspan="3">Administrar</th>
    </tr>
  </thead>
  <tbody>
    <% @apuracaos.each do |apuracao| %>
      <tr>
        <td><%=h "#{apuracao.formulario.id} - #{apuracao.formulario.nome}" %></td>
        <td><%=h apuracao.curso %></td>
        <td><%=h apuracao.n_pontos %></td>
        <td><%=h apuracao.nota_prova %></td>
        <td><%=h apuracao.total %></td>
        <td><%= link_to image_tag("/images/exibir.gif", :size => "15x15"), apuracao %></td>
        <td><%= link_to image_tag("/images/editar.png", :size => "15x15"), edit_apuracao_path(apuracao) %></td>
        <td><%= link_to image_tag("/images/excluir.png", :size => "15x15"), apuracao, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br />

