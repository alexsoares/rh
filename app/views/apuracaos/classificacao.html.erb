  <h1 align = "center" id="teste">LISTÃO CONCURSO EVENTUAL</h1>


<br/>
<br/>
<table>
  <thead>
    <tr>
      <th>Clas.</th>
      <th>Inscrição</th>
      <th>Nome</th>
      <th>Pontuacao Prova</th>
      <th>Pontuacao Apurada</th>
      <th>Pontuação Final</th>
      <th>Curso</th>
    </tr>
  </thead>
<%$contador = 1%>
<%if @apuracao.present? %>
  <% @apuracao.each do |apuracao|%>
  <tbody>
    <tr>
        <td><%= $contador%></td>
        <td><%=h  apuracao.formulario.id %></td>
        <td><%=h apuracao.formulario.nome %></td>
        <td><%=h format("%.3f",apuracao.nota_prova)%></td>
        <td><%=h format("%.3f",apuracao.n_pontos)%></td>
        <% if apuracao.total.nil? then %>
            <td><%=h 0.000 %></td>
        <%else%>
            <td><%=h format("%.3f",apuracao.total)%></td>
        <%end%>
          <td><%=h apuracao.curso%></td>
    </tr>
  </tbody>
       <% $contador= $contador+1 %>
  <% end %>
<%end%>
</table>
