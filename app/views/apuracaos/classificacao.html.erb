<h2 align="center">   Sistema de Pontuação de Professores - Secretaria de Educação</h2>
<br/>
<div id="caixa" class="botao">
<br/>
    <table>
        <% form_for @search do |f| %>
          <tr>
            <td align="right">
              <%= f.label :curso_equals, "Disciplina" %>
              <%= f.select :curso_equals, options_for_select(Formulario::DISCIPLINA.insert(0,"TODOS"))%>
            </td>
            <td align="center" colspan="2">
              <%= f.submit "Buscar" %>
            </td>
          </tr>
        <% end %>
    </table>
 </div>

